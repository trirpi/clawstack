{
  "name": "clawstack",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "PRISMA_HIDE_UPDATE_MESSAGE=1 prisma generate && ( [ -d prisma/migrations ] && [ \"$(ls -A prisma/migrations)\" ] && prisma migrate deploy || echo \"No migrations; skipping prisma migrate deploy\" ) && NEXT_PRIVATE_DISABLE_TURBOPACK=1 next build",
    "build:local": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "PRISMA_HIDE_UPDATE_MESSAGE=1 vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "env -u NO_COLOR FORCE_COLOR=0 playwright test",
    "test:e2e:ui": "env -u NO_COLOR FORCE_COLOR=0 playwright test --ui",
    "test:e2e:visual": "env -u NO_COLOR FORCE_COLOR=0 playwright test __tests__/e2e/visual.spec.ts",
    "test:e2e:update-snapshots": "env -u NO_COLOR FORCE_COLOR=0 playwright test --update-snapshots",
    "test:e2e:report": "playwright show-report",
    "test:e2e:trace": "playwright show-trace",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:local": "cp prisma/schema.sqlite.prisma prisma/schema.prisma && prisma generate && prisma db push",
    "db:postgres": "git checkout prisma/schema.prisma && prisma generate",
    "db:reset": "rm -f prisma/dev.db prisma/dev.db-journal && npm run db:local"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@floating-ui/dom": "^1.7.5",
    "@prisma/client": "^5.22.0",
    "@tiptap/extension-code-block-lowlight": "^3.18.0",
    "@tiptap/extension-highlight": "^3.18.0",
    "@tiptap/extension-image": "^3.18.0",
    "@tiptap/extension-link": "^3.18.0",
    "@tiptap/extension-placeholder": "^3.18.0",
    "@tiptap/extension-text-align": "^3.18.0",
    "@tiptap/extension-underline": "^3.18.0",
    "@tiptap/react": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lowlight": "^3.3.0",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.9.1",
    "stripe": "^20.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^27.4.0",
    "prisma": "^5.22.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
